<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Itemactivity">

    <TextView
        android:id="@+id/txtitem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:hint="Item Value"
        android:textColor="@color/black"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/mission_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtitem"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="45dp"
        android:text="На каком транспорте Вы чаще всего перемещаетесь?\nТут должен быть много текста задания, а внизу кнопка выполнил или нет"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <View
        android:id="@+id/line_sep"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/mission_description"
        android:layout_marginTop="10dp"
        android:background="@android:color/darker_gray" />

    <ImageView
        android:id="@+id/photo_bear"
        android:layout_width="500dp"
        android:layout_height="250dp"
        android:layout_below="@+id/line_sep"
        android:layout_alignParentTop="true"
        android:layout_marginTop="276dp"
        android:src="@drawable/white_bear" />

    <TextView
        android:id="@+id/coins_count_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/mission_description"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="45dp"
        android:text="Количество очков за выполненное задание:"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/coins_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/mission_description"
        android:layout_marginLeft="265dp"
        android:layout_marginTop="72dp"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <Button
        android:id="@+id/button_complete_mission"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/coins_count"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:padding="15dp"
        android:text="Готово" />

    <TextView
        android:id="@+id/is_complete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_complete_mission"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="50dp"
        android:textSize="27sp" />


</RelativeLayout>