<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profile">

<!--    <TextView-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:text="Profile"-->
<!--        android:textSize="50sp"-->
<!--        android:textStyle="bold"-->
<!--        android:layout_centerInParent="true"/>-->


    <pl.droidsonroids.gif.GifImageView
        android:layout_width="231dp"
        android:layout_height="144dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-32dp"
        android:layout_marginEnd="-61dp"
        android:onClick="go"
        android:src="@drawable/cloud" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bottom_navigation"
        app:itemBackground="@color/colorPrimary"
        app:itemTextColor="@drawable/selector"
        app:itemIconTint="@drawable/selector"
        app:menu="@menu/menu_navigation"
        android:layout_alignParentBottom="true"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageview_profile"
        android:layout_width="130dp"
        android:layout_height="150dp"
        android:src="@drawable/walle"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="60dp"/>

    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="{Имя пользователя}"
        android:textColor="#000"
        android:layout_below="@+id/imageview_profile"
        android:layout_marginLeft="25dp"
        android:textStyle="bold"
        android:layout_marginTop="5dp"/>

    <TextView
        android:id="@+id/current_level_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="210dp"
        android:layout_marginTop="100dp"
        android:text="Текущий уровень:"
        android:textColor="#000"
        android:textSize="17sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/name_level"
        android:layout_below="@+id/current_level_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="20dp"
        android:textColor="#000"
        android:textSize="17sp"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/user_name"
        android:layout_marginTop="20dp"
        android:id="@+id/line_sep"
        android:background="@android:color/darker_gray"/>

    <TextView
        android:id="@+id/info_challengers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Количество выполненных заданий: "
        android:textColor="#000"
        android:textSize="17sp"
        android:layout_below="@+id/user_name"
        android:textStyle="bold"
        android:layout_marginTop="85dp"
        android:layout_marginLeft="7dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:textSize="17sp"
        android:id="@+id/count_done_ex"
        android:layout_below="@id/user_name"
        android:layout_marginTop="112dp"
        android:layout_marginLeft="112dp"/>


    <TextView
        android:id="@+id/count_exp_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Количество очков:"
        android:textColor="#000"
        android:textSize="17sp"
        android:layout_below="@+id/info_challengers"
        android:textStyle="bold"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="7dp"/>

    <TextView
        android:id="@+id/count_exp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="n"
        android:textColor="#000"
        android:textSize="17sp"
        android:layout_below="@+id/info_challengers"
        android:textStyle="bold"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="210dp"/>



</RelativeLayout>